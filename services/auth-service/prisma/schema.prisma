generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id String @id @default(uuid())
  email String @unique
  passwordHash String
  status AccountStatus @default(ACTIVE)

  sessions Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
enum AccountStatus{
  ACTIVE
  SUSPENDED
}

model Session{
  id String @id @default(uuid())
  accountId String
  refreshTokenHash String

  deviceId String?
  userAgent String?
  ipAddress String?

  expiresAt DateTime
  revokedAt DateTime?
  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  @@index([accountId])
  @@index([refreshTokenHash])
}
